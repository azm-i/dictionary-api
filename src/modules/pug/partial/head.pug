//-================ GA ================-//
if GA_ID
  include ./ga.pug

//-================ meta ================-//
meta(charset='utf-8')
if typeof DESCRIPTION !== 'undefined'
  meta(name='description', content=DESCRIPTION)
if typeof KEYWORDS !== 'undefined'
  meta(name='keywords', content=KEYWORDS)

//-================ title ================-//
title!= TITLE && TITLE !== SITE_NAME ? `${TITLE} | ${SITE_NAME}` : SITE_NAME

