-
  function getFullPath(path) {
    if (ROOT_DIR_ASSETS && /^\/assets\//.test(path)) {
      return ROOT_DIR_ASSETS + path.slice(1)
    } else if (/^http/.test(path) || /^\/\//.test(path)) {
      return path
    } else if (path === '/' || /^\/\S/.test(path)) {
      return ROOT_DIR + path.slice(1)
    } else {
      return path
    }
  }
